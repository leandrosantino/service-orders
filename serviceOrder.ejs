<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ordem De serviço Preventiva</title>
    <style>
        :root {
            --blue: #186D8D;
            --green: #16A34B;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        * {
            margin: 0;
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 12pt;
        }

        @media print {
            .buttons {
                display: none;
            }

            .buttons button {
                display: none;
            }

            .buttons div {
                display: none;
            }

            .container {
                margin-top: -70px;
            }

        }

        .buttons {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            align-items: center;
            margin-top: 5px;
            margin-bottom: 5px;
            width: 210mm;
            height: 50px;
        }

        .buttons div {
            font-size: 16pt;
            font-weight: 600;
        }

        .buttons div button {
            padding: 7px;
            border-radius: 6px;
            border: none;
            background-color: var(--blue);
            color: #FFF;
            font-size: 12pt;
        }

        .buttons button:hover {
            cursor: pointer;
            opacity: 90%;
        }

        .buttons button:active {
            opacity: 80%;
        }

        .buttons #_2 {
            background-color: var(--green)
        }

        .container {
            width: 210mm;
            min-height: 280mm;
            border: 1px solid black;
            margin-bottom: 20px;
            padding: 20px;
        }

        .head {
            width: 100%;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

        .head * {
            font-size: 16pt;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .head #logo {
            color: #000764;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        .infoCase {
            margin-top: 10px;
            height: 40px;
            display: flex;
        }

        .info {
            width: 50%;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            border: 1px solid black;
        }

        .info div:last-child {
            width: 100%;
            text-align: end;
            padding: 0 4px;
        }

        .info .label {
            width: fit-content;
            font-weight: bold;
            padding: 0 4px;
        }

        .label {
            font-weight: bold;
            font-size: 10pt;
        }

        .formCase {
            /* margin-top: 20px; */
            display: flex;
            flex-direction: row;
            width: 100%;
        }

        .formCase .formBlock {
            display: flex;
            flex-direction: column;
            width: 50%;
        }

        .formBlock .formInput {
            display: flex;
            flex-direction: row;
            justify-content: start;
            align-items: center;
            border: 1px solid black;
            height: 40px;
            padding: 3px;
        }

        .formInput .label {
            font-size: 10pt;
            white-space: nowrap;
        }

        .formInput .value {
            text-indent: 5px;
            width: 100%;
        }

        .tableCase {
            margin-top: 15px;
            margin-bottom: 15px;
            width: 100%;
        }

        .tableCase .tableHead {
            width: 100%;
            display: flex;
            flex-direction: row;
        }

        .tableCase .tableHead div {
            display: flex;
            padding: 5px;
            justify-content: start;
            align-items: center;
            background-color: rgb(180, 180, 180);
            border: 1px solid black;
            font-size: 10pt;
            font-weight: bold;
        }

        .tableCase .tableRow {
            width: 100%;
            display: flex;
            flex-direction: row;
            min-height: 60px;
        }

        .tableCase .tableRow div {
            display: flex;
            padding: 7px;
            justify-content: start;
            align-items: center;
            border-bottom: 1px solid black;
            font-size: 10pt;
        }
    </style>
</head>

<body>

    <div class="buttons">
        <div>Imprimir Ordem de Serviço Preventiva</div>
        <div>
            <button id="1" onclick="printPage()">Imprimir</button>
            <button id="_2" onclick="printPageToPDF()">Salvar Como PDF</button>
        </div>
    </div>


    <div class="container">
        <div class="head">
            <div id="logo">Adler Pelzer Group</div>
            <div>
                Ordem de Serviço Preventiva - Nº <%- data.code.padStart(5, '0') %>
            </div>
        </div>

        <div class="infoCase">
            <div class="info" style="width: 35%;">
                <div class="label" >Máquina:</div>
                <div style="font-size: 16px;" >
                    <%- data.machine %>
                </div>
            </div>
            <div class="info" style="width: 20%;">
                <div class="label">Semana:</div>
                <div>
                    <%- data.weekCode.split('-W')[1] %>, <%- data.weekCode.split('-W')[0] %>
                </div>
            </div>
            <div class="info" style="width: 30%;">
                <div class="label">Data:</div>
                <div>
                    <%- data.date %>
                </div>
            </div>
            <div class="info" style="width: 15%;">
                <div class="label">Truno:</div>
                <div>

                </div>
            </div>
            <!-- <div class="info">
                <div class="label">Ano:</div>
                <div>
                    <%- data.weekCode.split('-W')[0] %>
                </div>
            </div> -->
            <!-- <%if(data.duration){%>
                <div class="info">
                    <div class="label">Tempo:</div>
                    <div>
                        <%- data.duration %> min
                    </div>
                </div>

                <%}%> -->
        </div>

        <div class="formCase">
            <div class="formBlock">
                <div class="formInput">
                    <div class="label">Especialidade:</div>
                    <div class="value">
                        <%- data.nature %>
                    </div>
                </div>
                <div class="formInput">
                    <div class="label">Manutencistas:</div>
                    <div class="value">
                        <%- data.responsibles %>
                    </div>
                </div>
            </div>
            <div class="formBlock">
                <!-- <div class="formInput">
                    <div class="label">Data:</div>
                    <div class="value"><%- data.date %></div>
                </div> -->
                <div class="formInput">
                    <div class="label">Hora de Início:</div>
                    <div class="value"></div>
                <!-- </div>
                <div class="formInput"> -->
                    <div class="label">Hora Final:</div>
                    <div class="value"></div>
                </div>
                <div class="formInput">
                    <div class="label">Duração:</div>
                    <div class="value"><%- data.duration %></div>
                </div>
            </div>

        </div>
        <div class="formCase" style="margin-top: 20px;">
            <div class="formBlock" style="width: 100%;">
                <div class="formInput" style="width: 100%; height: 100px; align-items: start;">
                    <div class="label">Observações:</div>
                </div>
            </div>
        </div>

        <div class="tableCase">
            <div class="tableHead">
                <div style="width: 5%; justify-content: center;">Cod.</div>
                <div style="width: 5%; justify-content: center;">?</div>
                <div style="width: 45%;">Descrição</div>
                <div style="width: 45%;">Execução</div>
                <!-- <div style="width: 35%;">Observações</div> -->
            </div>

            <% (data.actions?data.actions:data.actionsTaken).map((value)=>{
                const item = value.action?value.action:value
            %>
                <div class="tableRow">
                    <div style="width: 5%; justify-content: center;">
                        <%- item.id %>
                    </div>
                    <div style="width: 5%; justify-content: center;">[<span style="width: 10px;"></span>]</div>
                    <div style="width: 45%;">
                        <%- item.description %>
                    </div>
                    <div style="width: 45%;">
                        <%- item.excution %>
                    </div>
                    <!-- <div style="width: 25%; align-items: start;">
                        <%- 'obs:'%>
                    </div> -->
                </div>
            <%}) %>
        </div>

    </div>

    <script>
        const pdfName = "<%-data.id%>_<%-data.weekCode.replace('W', 'S')%>_<%-data.machine.tag%>-<%-data.nature.name%>"
        function printPage() {
            window.app.ipc('printServiceOrder', Number('<%-data.id%>'))
        }
        function printPageToPDF() {
            window.app.ipc('printServiceOrder', Number('<%-data.id%>'), pdfName, true)
        }
    </script>
</body>

</html>
